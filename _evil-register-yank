#!/usr/bin/env zsh
# if no copy handler is registered for the given system register,
# then run with the default register
if ! (( ${+ZSH_EVIL_COPY_HANDLERS[$_evil_register]} )); then
	zle "$1"
	return "$?"
fi
zle .vi-set-buffer x
local x
x=$registers[x]
zle "$1"
eval ${ZSH_EVIL_COPY_HANDLERS[$_evil_register]} <<< "${registers[x]}"
registers[x]="$x"
unset _evil_register
